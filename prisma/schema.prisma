generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model MataKuliah {
  kodeMataKuliah String @id @unique
  matakuliah     String
  ruangan        String
  dosenPengampu  String
}

model SmartGarden {
  id         Int      @id @default(autoincrement())
  suhu       Int
  kelembaban Int
  createdAt  DateTime @default(now()) // Menambahkan timestamp ketika record dibuat
  updatedAt  DateTime @updatedAt
}
